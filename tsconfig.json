{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@utils": ["src/utils/index"],
      "@validation": ["src/validation/index"],
      "@constants": ["src/constants/index"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
